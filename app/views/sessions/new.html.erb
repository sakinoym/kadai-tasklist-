<h1>ログイン</h1>

<%= form_with(url: login_path, scope: :session) do |f| %>

<div>
  <%= f.label :email, 'メールアドレス' %>
  <%= f.email_field :email %>
</div>

<div>
  <%= f.label :password, 'パスワード' %>
  <%= f.password_field :password %>
</div>

<div>
  <%= f.submit 'ログイン' %>
<% end %>
<p>新規ユーザ登録は<%= link_to 'こちら', signup_path %></p>
</div>
